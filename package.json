{
  "name": "my-app",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "convex": "^1.31.2",
      "better-auth": "1.4.9",
      "@convex-dev/better-auth": "^0.10.9"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "check-types": "bun run --filter '*' check-types",
    "dev:native": "bun run --filter native dev",
    "dev:web": "bun run --filter web dev",
    "dev:server": "bun run --filter @my-app/backend dev",
    "dev:setup": "bun run --filter @my-app/backend dev:setup"
  },
  "packageManager": "bun@1.3.3",
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@my-app/env": "workspace:*"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "@my-app/config": "workspace:*"
  }
}
